<?xml version="1.0" encoding="utf-8"?>
<ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verification1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Proof of Identity"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginEnd="50dp"
            android:text="In order to complete your registeration please upload your identity card with a clear photo to prove your document holder"
            android:textSize="14sp"
            />
        <RelativeLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            >

            <RelativeLayout
                android:id="@+id/nic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dotedborder"
                >
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload proof identity front"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
            <ImageView
                android:id="@+id/nic_front"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/model"
                android:layout_below="@id/txt1"
                android:elevation="3dp"
                />

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nic1"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/dotedborder">
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload proof identity back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
                <ImageView
                    android:id="@+id/nic_back"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/txt2"
                    android:src="@drawable/model"
                    android:elevation="3dp"
                    />

            </RelativeLayout>
            <Button
                android:id="@+id/update_nicpics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/nic2"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:text="upload image"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_design"/>
            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:layout_below="@id/update_nicpics"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:text="next"
                android:textColor="@android:color/white"
                android:background="@drawable/button_design"/>
        </RelativeLayout>



    </LinearLayout>


</ScrollView>